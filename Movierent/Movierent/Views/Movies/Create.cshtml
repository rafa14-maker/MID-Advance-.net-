
@model Movierent.Models.Movie
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form action="/Movies/Create" method="post" class="card">
    <input type="text" name="Id" value="@Model.Id" placeholder="00000" class="form-control" />
    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    <input type="submit" value="Submit" />

</form>