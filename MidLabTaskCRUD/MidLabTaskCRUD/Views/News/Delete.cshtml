@model MidLabTaskCRUD.Models.Database.News
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<div>
    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>PublishDate</th>
        </tr>
            <tr>
                <td>@Model.Title</td>
                <td>@Model.Description</td>
                <td>@Model.Category</td>
                <td>@Model.PublishDate</td>
            </tr>

    </table>
</div>
<div>
<form action="/News/Delete" method="post" class="card">
    <input type="hidden" name="id" value="@Model.Id" class="form-control" />
    <input type="hidden" name="temp" value="0" class="form-control" />
    <input type="submit" value="Delete" />

</form>
</div>

